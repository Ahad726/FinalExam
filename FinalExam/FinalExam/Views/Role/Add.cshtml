@model FinalExam.Models.RoleUpdateModel
@{
    ViewData["Title"] = "Add Role";
}



<div class="container-fluid">
    <div class="row">
        <!-- left column -->
        <div class="col-md-6">
            <!-- general form elements -->
            <div class="card card-primary">
                <div class="card-header">
                    <h3 class="card-title">Add a new role</h3>
                </div>
                <!-- /.card-header -->
                <!-- form start -->
                <form role="form" action="/role/add" method="post">
                    @Html.AntiForgeryToken()
                    <div class="card-body">
                        <div class="form-group">
                            <label for="roleName">Name</label>
                            <input type="text" class="form-control" name="RoleName" id="roleName" placeholder="Enter name">
                        </div>
                    </div>
                    <!-- /.card-body -->

                    <div class="card-footer">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>
                </form>
            </div>
            <!-- /.card -->

        </div>
        <!--/.col (left) -->
    </div>
</div>
